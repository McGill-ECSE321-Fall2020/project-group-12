<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="116dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FF0000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewCartPostings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewTotalPrice"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Total Price:  "
            android:textAlignment="center"
            android:layout_gravity="center" />

        <Spinner
            android:id="@+id/deliveryTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#DD1111"
            android:onClick="makePurchase"
            android:text="Purchase"
            />
    </LinearLayout>

    <resources tools:ignore="MissingConstraints">
        <string-array android:name="deliveryType">
            <item>Pick-Up</item>
            <item>Shipped</item>
        </string-array>
    </resources>

</androidx.constraintlayout.widget.ConstraintLayout>